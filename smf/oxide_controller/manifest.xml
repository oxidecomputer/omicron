<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='oxide_controller'>

<service name='system/illumos/oxide_controller' type='service' version='1'>
  <create_default_instance enabled='false' />
  <single_instance />

  <exec_method type='method' name='start'
    exec='ctrun -l child -o noorphan,regent /opt/oxide/oxcp/oxide_controller/oxide_controller /opt/oxide/oxcp/oxide_controller/smf/oxide_controller/config.toml &amp;'
    timeout_seconds='0' />
  <exec_method type='method' name='stop' exec=':kill' timeout_seconds='0' />

  <property_group name='startd' type='framework'>
    <propval name='duration' type='astring' value='contract' />
  </property_group>

  <stability value='Unstable' />

  <template>
    <common_name>
      <loctext xml:lang='C'>Oxide Controller</loctext>
    </common_name>
    <description>
      <loctext xml:lang='C'>Oxide Control Plane Instance</loctext>
    </description>
  </template>
</service>

</service_bundle>
