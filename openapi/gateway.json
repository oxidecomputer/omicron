        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "title": "Array_of_SpIgnitionInfo",
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SpIgnitionInfo"
                  }
